    "express": "^4.17.1",
    "firebase": "^7.1.0",
    "js-cookie": "^2.2.1",
    "jwt-decode": "^2.2.0",
    "nodemon": "^1.19.3",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/vuetify": "^1.0.0",
    "firebase-functions-test": "^0.1.6"
