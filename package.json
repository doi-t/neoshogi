{
  "name": "neoshogi",
  "version": "1.0.0",
  "description": "yet another online shogi aming to be an e-sports.",
  "author": "Toshiya Doi",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server/index.js --watch server",
    "start": "cross-env NODE_ENV=production node src/server/index.js",
    "generate": "nuxt generate",
    "build": "nuxt build",
    "build:staticAndServer": "yarn clean && yarn build && yarn copy && cd servers && yarn",
    "clean": "yarn clean:public && yarn clean:servers && yarn clean:static",
    "clean:servers": "rimraf servers/node_modules && rimraf servers/.nuxt",
    "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf public/_nuxt",
    "clean:static": "rimraf src/static/sw.js",
    "copy": "yarn copy:nuxt && yarn copy:static",
    "copy:nuxt": "cp -R servers/.nuxt/dist/ public/_nuxt/",
    "copy:static": "cp src/static/* public/",
    "start:firebase": "firebase serve --only hosting",
    "start:server": "cd servers && yarn start",
    "deploy": "yarn deploy:cloudrun && yarn deploy:firebase",
    "deploy:firebase": "firebase deploy --only hosting:neoshogi",
    "deploy:cloudrun": "cd servers && yarn build && yarn deploy"
  },
  "dependencies": {
    "@nuxtjs/dotenv": "^1.4.1",
    "consola": "^2.10.1",
    "cookieparser": "^0.1.0",
    "cross-env": "^6.0.3",
    "express": "^4.17.1",
    "firebase": "^7.2.1",
    "js-cookie": "^2.2.1",
    "jwt-decode": "^2.2.0",
    "nodemon": "^1.19.4",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/vuetify": "^1.0.0"
  }
}
